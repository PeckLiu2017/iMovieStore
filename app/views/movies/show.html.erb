<div class="col-md-12">
  <span class="pull-right">
  <% if current_user && current_user.is_member_of?(@movie) %>
        <%= link_to("Remove it form favorite", quit_movie_path(@movie), method: :post, class: "btn btn-default") %>
<label class="label label-success"> Favorited </label>
<% else %>
  <%= link_to("Favorite it", join_movie_path(@movie), method: :post, class: "btn btn-default") %>
  <label class="label label-warning"> Favorite? </label>
<% end %>
</span>
  <div class="movie">
    <% if current_user && current_user.is_member_of?(@movie) %>
    <%= link_to("Write a Review", new_movie_review_path(@movie), class: "btn btn-default pull-right")%>
    <% end %>
    <% if current_user && current_user == @movie.user %>
    <%= link_to("Edit", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>

  <table class="table">
    <thead>
     <tr>
        <th>Review Content</th>
        <th>Creator</th>
        <th>Release Time</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= simple_format(review.content) %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate@reviews%>
  </div>
</div>
