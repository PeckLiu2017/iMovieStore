<table class="table table-hover">
  <thead>
    <tr>
      <td>#</td>
      <td>Movie</td>
      <td>Description</td>
      <td>Creator</td>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td>#</td>
    <td><%= link_to(movie.title, movie_path(movie)) %></td>
    <td><%= render_movie_description(movie) %></td>
    <td><%= movie.user.email %></td>
    <td>
      <% if current_user && current_user == movie.user %>
        <%= link_to("Edit", edit_movie_path(movie), class: "btn btn-sm btn-default")%>
      <% end %>
    </td>
    <td>
      <% if current_user && current_user == movie.user %>
        <%= link_to("Delete", movie_path(movie),    class: "btn btn-sm btn-default",
                    method: :delete, data: { confirm: "Are you sure?" } )%>
      <% end %>
    </td>
  </tr>
</tbody>
</table>
</div>
